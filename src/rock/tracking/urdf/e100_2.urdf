<?xml version="1.0"?>
<robot name="BaojunE100">
  <!-- color map -->
  <material name="red">
    <color rgba="1 0 0 0.5" />
  </material>
  <material name="black">
    <color rgba="1 0 1 1" />
  </material>
  <material name="white">
    <color rgba="1 1 1 1" />
  </material>
  <material name="blue">
    <color rgba="0 0 0.8 1"/>
  </material>
  <material name="gray">
    <color rgba="0.2 0.2 0.2 1" />
  </material>
  <!-- draw vehicle body -->
  <link name="vehicle">
    <!-- vehicle body -->
    <visual>
      <geometry>
        <mesh filename="package://part_based_tracking/../mesh/BaojunE100/BaojunE100.dae" />
      </geometry>
      <material name="white"/>
      <origin rpy="0 0 1.57" xyz="0.7 0 0"/>
    </visual>
  </link>

  <link name="gps">
    <!-- GPS front antenna -->
    <visual>
      <geometry>
        <cylinder length="0.03" radius="0.08"/>
      </geometry>
      <origin rpy="0 0 0" xyz="0 0.46 0"/>
      <material name="white"/>
    </visual>
    <!-- GPS rear antenna -->
    <visual>
      <geometry>
        <cylinder length="0.03" radius="0.08"/>
      </geometry>
      <origin rpy="0 0 0" xyz="0 -0.46 0"/>
      <material name="white"/>
    </visual>
  </link>
  <joint name="vehicle_to_gps" type="fixed">
    <parent link="vehicle"/>
    <child link="gps"/>
    <origin rpy="0 0 0" xyz="0.2 0 1.8"/>
  </joint>

  <!-- draw front lidar -->
  <link name="lidar_front">
    <visual>
      <geometry>
        <cylinder length="0.1" radius="0.06"/>
      </geometry>
      <origin rpy="0 0 0" xyz="0 0 0"/>
      <material name="blue"/>
    </visual>
  </link>
  <joint name="vehicle_to_lidar_front" type="fixed">
    <parent link="vehicle"/>
    <child link="lidar_front"/>
    <origin rpy="0 0.03 1.635" xyz="0.48 0 1.75"/>
  </joint>

</robot>